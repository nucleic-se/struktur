{
  "$class": "aspect_network_interface",
  "$aspect": "aspect_network_interface",
  "$kind": "infrastructure",
  "$description": "Network connectivity for entities",
  "$schema": {
    "type": "object",
    "required": [
      "ip"
    ],
    "properties": {
      "ip": {
        "type": "string",
        "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
        "description": "IPv4 address"
      },
      "mac": {
        "type": "string",
        "pattern": "^([0-9A-Fa-f]{2}:){5}[0-9A-Fa-f]{2}$",
        "description": "MAC address"
      },
      "hostname": {
        "type": "string",
        "minLength": 1,
        "description": "Network hostname"
      }
    }
  },
  "$defaults": {
    "ip": null,
    "mac": null,
    "hostname": null
  }
}
