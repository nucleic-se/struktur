{
  "class": "blog_post",
  "parent": "content_base",
  "schema": {
    "type": "object",
    "required": ["date"],
    "properties": {
      "date": { "type": "string", "minLength": 1 },
      "tags": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^[a-z0-9]([a-z0-9-]*[a-z0-9])?$",
          "minLength": 1,
          "maxLength": 50
        },
        "maxItems": 20,
        "description": "Array of URL-safe tags (lowercase, alphanumeric, hyphens)"
      }
    }
  },
  "fields": {
    "tags": []
  }
}
