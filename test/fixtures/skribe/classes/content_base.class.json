{
  "$class": "content_base",
  "$schema": {
    "type": "object",
    "required": [
      "$id",
      "$class",
      "title",
      "slug"
    ],
    "properties": {
      "$id": {
        "type": "string"
      },
      "$class": {
        "type": "string"
      },
      "title": {
        "type": "string",
        "minLength": 1
      },
      "description": {
        "type": "string"
      },
      "slug": {
        "type": "string",
        "minLength": 1,
        "pattern": "^[a-z0-9]([a-z0-9-]*[a-z0-9])?$",
        "description": "URL-safe slug: lowercase letters, numbers, hyphens only. Must start and end with alphanumeric."
      },
      "date": {
        "type": "string"
      },
      "content": {
        "type": "string"
      },
      "author": {
        "type": "string"
      },
      "$parent": {
        "type": "string"
      },
      "$render": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["template", "output"],
          "properties": {
            "template": {
              "type": "string",
              "minLength": 1
            },
            "output": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        }
      },
      "site": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "pattern": "^https?://[a-z0-9]([a-z0-9-]*[a-z0-9])?(\\.[a-z0-9]([a-z0-9-]*[a-z0-9])?)*(/[^\\s]*)?$",
            "description": "Site base URL (http:// or https://), without trailing slash"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  },
  "$fields": {
    "title": "",
    "description": "",
    "slug": "",
    "date": "",
    "content": "",
    "author": ""
  }
}
