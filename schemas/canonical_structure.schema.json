{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://struktur.dev/schemas/canonical-structure.schema.json",
  "title": "Struktur Canonical Output Structure",
  "description": "Schema for validating the structure of canonical.json output from struktur builds",
  "type": "object",
  "required": [
    "instances",
    "instances_by_id"
  ],
  "properties": {
    "instances": {
      "type": "array",
      "description": "Array of all merged instances in build order",
      "items": {
        "type": "object",
        "required": ["id", "class"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique instance identifier"
          },
          "class": {
            "type": "string",
            "description": "Class name this instance belongs to"
          },
          "aspects": {
            "type": "object",
            "description": "Aspect data keyed by aspect name"
          },
          "aspect_types": {
            "type": "array",
            "items": { "type": "string" },
            "description": "List of aspect names (auto-derived from aspects keys)"
          },
          "_source_file": {
            "type": "string",
            "description": "Source file path for debugging"
          },
          "_merged_from": {
            "type": "array",
            "items": { "type": "string" },
            "description": "List of files this instance was merged from"
          }
        },
        "additionalProperties": true
      }
    },
    "instances_by_id": {
      "type": "object",
      "description": "Map of instance ID to instance object for fast lookup",
      "additionalProperties": {
        "type": "object",
        "required": ["id", "class"],
        "properties": {
          "id": { "type": "string" },
          "class": { "type": "string" }
        }
      }
    },
    "classes": {
      "type": "array",
      "description": "Array of all resolved class definitions (optional, only if includeClassIndex=true)",
      "items": {
        "type": "object",
        "required": ["class", "lineage", "schema"],
        "properties": {
          "class": {
            "type": "string",
            "description": "Class name"
          },
          "lineage": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Inheritance chain from base to this class"
          },
          "schema": {
            "type": "object",
            "description": "Merged JSON Schema for this class"
          },
          "fields": {
            "type": "object",
            "description": "Default field values"
          },
          "aspects": {
            "description": "Required/optional aspects for this class",
            "oneOf": [
              {
                "type": "array",
                "items": { "type": "string" }
              },
              {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "required": { "type": "boolean" }
                  }
                }
              }
            ]
          },
          "_source_file": {
            "type": "string",
            "description": "Source file path for debugging"
          }
        },
        "additionalProperties": true
      }
    },
    "classes_by_id": {
      "type": "object",
      "description": "Map of class name to resolved class definition (optional, only if includeClassIndex=true)",
      "additionalProperties": {
        "type": "object",
        "required": ["class", "lineage", "schema"],
        "properties": {
          "class": {
            "type": "string",
            "description": "Class name"
          },
          "lineage": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Inheritance chain from base to this class"
          },
          "schema": {
            "type": "object",
            "description": "Merged JSON Schema for this class"
          },
          "fields": {
            "type": "object",
            "description": "Default field values"
          },
          "aspects": {
            "description": "Required/optional aspects for this class",
            "oneOf": [
              {
                "type": "array",
                "items": { "type": "string" }
              },
              {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "required": { "type": "boolean" }
                  }
                }
              }
            ]
          },
          "_source_file": {
            "type": "string",
            "description": "Source file path for debugging"
          }
        },
        "additionalProperties": true
      }
    },
    "aspects": {
      "type": "array",
      "description": "Array of all aspect definitions (optional, only if includeAspectsIndex=true)",
      "items": {
        "type": "object",
        "required": ["aspect", "schema"],
        "properties": {
          "aspect": {
            "type": "string",
            "description": "Aspect name"
          },
          "schema": {
            "type": "object",
            "description": "JSON Schema for this aspect"
          },
          "description": {
            "type": "string",
            "description": "Human-readable description"
          },
          "_source_file": {
            "type": "string",
            "description": "Source file path for debugging"
          }
        },
        "additionalProperties": true
      }
    },
    "aspects_by_id": {
      "type": "object",
      "description": "Map of aspect name to aspect definition (optional, only if includeAspectsIndex=true)",
      "additionalProperties": {
        "type": "object",
        "required": ["aspect", "schema"],
        "properties": {
          "aspect": {
            "type": "string",
            "description": "Aspect name"
          },
          "schema": {
            "type": "object",
            "description": "JSON Schema for aspect data validation"
          },
          "description": {
            "type": "string",
            "description": "Human-readable aspect description"
          },
          "_source_file": {
            "type": "string",
            "description": "Source file path for debugging"
          }
        },
        "additionalProperties": true
      }
    },
    "metadata": {
      "type": "object",
      "description": "Build metadata (optional)",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of build"
        },
        "version": {
          "type": "string",
          "description": "Struktur version used for build"
        },
        "generator": {
          "type": "string",
          "description": "Generator name (always 'struktur')"
        },
        "count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of instances"
        },
        "classes": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of unique classes"
        },
        "aspects": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of aspects"
        }
      },
      "additionalProperties": false
    },
    "validation": {
      "type": "object",
      "description": "Validation results (optional)",
      "required": ["total", "valid", "invalid", "errors"],
      "properties": {
        "total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total instances validated"
        },
        "valid": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of valid instances"
        },
        "invalid": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of invalid instances"
        },
        "errors": {
          "type": "array",
          "description": "Validation errors for invalid instances",
          "items": {
            "type": "object",
            "required": ["instance", "class", "errors"],
            "properties": {
              "instance": { "type": "string" },
              "class": { "type": "string" },
              "errors": { "type": "array" }
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
