{
  "$class": "link_base",
  "$schema": {
    "type": "object",
    "title": "Base Link",
    "description": "Base class for all link types",
    "properties": {
      "url": {
        "type": "string",
        "format": "uri",
        "description": "The URL of the link"
      },
      "title": {
        "type": "string",
        "description": "Display title for the link"
      },
      "description": {
        "type": "string",
        "description": "Short description of what this link is"
      },
      "category": {
        "type": "string",
        "description": "Primary category (e.g., 'Bundlers', 'Linters', 'Package Managers')"
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Tags for filtering and search"
      },
      "date_added": {
        "type": "string",
        "format": "date",
        "description": "When this link was added to the collection"
      }
    },
    "required": [
      "url",
      "title",
      "description",
      "category"
    ]
  }
}
