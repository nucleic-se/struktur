{
  "class": "tool_link",
  "extends": "link_base",
  "schema": {
    "type": "object",
    "title": "Tool/Library Link",
    "description": "Link to a tool, library, or software",
    "properties": {
      "language": {
        "type": ["string", "null"],
        "description": "Primary programming language"
      },
      "github_stars": {
        "type": "integer",
        "description": "Number of GitHub stars (if applicable)"
      },
      "license": {
        "type": "string",
        "description": "Software license (MIT, Apache, etc.)"
      },
      "github_url": {
        "type": "string",
        "format": "uri",
        "description": "GitHub repository URL"
      }
    }
  }
}
