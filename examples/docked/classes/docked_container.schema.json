{
  "class": "docked_container",
  "parent": "entity_base",
  "pretty_name": "Containers",
  "$uses_aspects": [
    "docker_container"
  ],
  "domains": [],
  "$aspect_defaults": {
    "docker_container": {
      "networks": ["docked"],
      "restart_policy": "unless-stopped",
      "healthcheck": {
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    }
  },
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique container id"
      },
      "class": {
        "type": "string",
        "const": "docked_container"
      },
      "domains": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Domain classifications (inherited from universal)"
      },
      "$aspects": {
        "type": "object",
        "properties": {
          "docker_container": {
            "type": "object",
            "properties": {
              "image": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "ports": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^[0-9]{1,5}:[0-9]{1,5}$"
                }
              },
              "networks": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "volumes": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "environment": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "depends_on": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "restart_policy": {
                "type": "string",
                "enum": [
                  "no",
                  "always",
                  "on-failure",
                  "unless-stopped"
                ]
              },
              "web_ui": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": [
              "image"
            ],
            "additionalProperties": true
          }
        },
        "required": [
          "docker_container"
        ],
        "additionalProperties": true
      },
      "relations": {
        "type": "object",
        "additionalProperties": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "string"
            },
            {
              "type": "object",
              "additionalProperties": true
            }
          ]
        },
        "description": "Relationships to other instances (optional)"
      }
    },
    "required": [
      "id",
      "class",
      "$aspects"
    ],
    "additionalProperties": true
  }
}
