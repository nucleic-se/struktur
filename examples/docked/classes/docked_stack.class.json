{
  "$class": "docked_stack",
  "$parent": "universal_base",
  "$pretty_name": "Docked Stack",
  "$schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "$id": {
        "type": "string",
        "description": "Unique identifier for the stack (use 'global')"
      },
      "$class": {
        "type": "string",
        "const": "docked_stack"
      },
      "stack_name": {
        "type": "string",
        "description": "Display name for the stack"
      },
      "description": {
        "type": "string",
        "description": "Human-friendly overview of the stack"
      },
      "$render": {
        "type": "array",
        "description": "Build instructions for template rendering",
        "items": {
          "type": "object",
          "required": ["template", "output"],
          "properties": {
            "template": {
              "type": "string",
              "minLength": 1
            },
            "output": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        }
      },
      "domains": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Domain classifications for the stack"
      },
      "$uses_aspects": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Kind classifications for the stack"
      },
      "$aspects": {
        "type": "object",
        "additionalProperties": true,
        "description": "Aspect data for the stack root (optional)"
      },
      "relations": {
        "type": "object",
        "additionalProperties": true,
        "description": "Relationships to other instances (optional)"
      },
      "$instances_by_id": {
        "type": "object",
        "description": "Resolved instance map injected at build time",
        "additionalProperties": {
          "type": "object",
          "additionalProperties": {}
        }
      },
      "$classes_by_id": {
        "type": "object",
        "description": "Resolved classes metadata injected at build time",
        "additionalProperties": {
          "type": "object",
          "additionalProperties": {}
        }
      },
      "$class_entries": {
        "type": "array",
        "description": "Resolved class entries injected at build time",
        "items": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "pretty_name": {
        "type": "string",
        "description": "Optional display name"
      }
    },
    "required": [
      "$id",
      "$class"
    ],
    "additionalProperties": true
  }
}
