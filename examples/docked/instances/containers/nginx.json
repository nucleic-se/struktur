{
  "$id": "nginx",
  "$class": "docked_container",
  "description": "Reverse proxy and static file server for the application",
  "domains": [
    "web",
    "proxy"
  ],
  "$aspects": {
    "aspect_docker_container": {
      "image": "nginx:alpine",
      "description": "Reverse proxy routing to API and serving frontend application",
      "web_ui": "http://localhost:8080",
      "ports": [
        "8080:80"
      ],
      "volumes": [
        "./frontend:/usr/share/nginx/html:ro",
        "./nginx.conf:/etc/nginx/nginx.conf:ro"
      ],
      "depends_on": [
        "api"
      ],
      "healthcheck": {
        "test": [
          "CMD",
          "wget",
          "--no-verbose",
          "--tries=1",
          "--spider",
          "http://localhost/health"
        ],
        "timeout": "3s",
        "start_period": "10s"
      },
      "deploy": {
        "resources": {
          "limits": {
            "cpus": "0.5",
            "memory": "256M"
          },
          "reservations": {
            "cpus": "0.1",
            "memory": "64M"
          }
        }
      }
    }
  },
  "relations": {
    "proxies/proxied_by": [
      "api"
    ]
  }
}
