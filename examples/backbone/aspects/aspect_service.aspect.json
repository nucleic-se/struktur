{
  "aspect": "aspect_service",
  "schema": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "description": "Service type (dns, proxy, database, photo_management, etc.)"
      },
      "port": {
        "type": [
          "integer",
          "number"
        ],
        "description": "Primary service port"
      },
      "protocol": {
        "type": "string",
        "description": "Service protocol (HTTP, HTTPS, DNS, TCP, etc.)"
      },
      "url": {
        "type": "string",
        "description": "Service URL or web interface"
      }
    },
    "required": [
      "type",
      "port",
      "protocol",
      "url"
    ],
    "additionalProperties": false
  }
}
