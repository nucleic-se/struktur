{
  "$class": "aspect_proxmox_guest",
  "$aspect": "aspect_proxmox_guest",
  "$schema": {
    "type": "object",
    "properties": {
      "vmid": {
        "anyOf": [
          {
            "type": "integer"
          },
          {
            "type": "number"
          }
        ],
        "description": "Proxmox VMID"
      },
      "host_node": {
        "type": "string",
        "description": "Target Proxmox node"
      },
      "ostemplate": {
        "type": "string",
        "description": "Template for LXC"
      },
      "rootfs_storage": {
        "type": "string",
        "description": "Root filesystem storage target"
      },
      "rootfs_size": {
        "type": "string",
        "description": "Root filesystem size"
      },
      "start": {
        "type": "boolean",
        "description": "Whether to auto-start"
      },
      "unprivileged": {
        "type": "boolean",
        "description": "Whether container is unprivileged"
      },
      "cmode": {
        "type": "string",
        "description": "Console mode"
      }
    },
    "required": [
      "vmid",
      "host_node",
      "ostemplate",
      "rootfs_storage",
      "rootfs_size",
      "start",
      "unprivileged",
      "cmode"
    ],
    "additionalProperties": false
  }
}
