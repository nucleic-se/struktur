{
  "$class": "aspect_compute_node",
  "$aspect": "aspect_compute_node",
  "$schema": {
    "type": "object",
    "properties": {
      "cores": {
        "anyOf": [
          {
            "type": "integer"
          },
          {
            "type": "number"
          }
        ],
        "description": "Number of CPU cores"
      },
      "memory": {
        "anyOf": [
          {
            "type": "integer"
          },
          {
            "type": "number"
          },
          {
            "type": "string"
          }
        ],
        "description": "Memory capacity (bytes or human string)"
      },
      "storage": {
        "type": "string",
        "description": "Storage capacity"
      }
    },
    "required": [
      "cores",
      "memory",
      "storage"
    ],
    "additionalProperties": false
  }
}
