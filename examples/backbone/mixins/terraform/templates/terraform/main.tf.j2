terraform {
    required_providers {
        proxmox = {
            source = "Telmate/proxmox"
            version = "3.0.2-rc04"
        }
    }
}

provider "proxmox" {
    pm_api_url = var.pm_api_url
    pm_api_token_id = var.pm_api_token_id
    pm_api_token_secret = var.pm_api_token_secret
    pm_tls_insecure = var.pm_tls_insecure
}

#
# LXC Containers
# Generated from backbone stack
#
{{#each $instances}}
{{#if (exists $aspects)}}
{{#if (and (eq $class "proxmox_lxc") (get $aspects "aspect_terraform.enabled"))}}
resource "proxmox_lxc" "{{$id}}" {
    # From data model
    vmid = {{get $aspects "aspect_proxmox_guest.vmid"}}
    target_node = "{{get $aspects "aspect_proxmox_guest.host_node"}}"
    hostname = "{{get $aspects "aspect_network_interface.hostname"}}"
    
    # From data model: ostemplate
    ostemplate = "{{get $aspects "aspect_proxmox_guest.ostemplate"}}"
    
    # From data model: cores and memory
    cores = {{get $aspects "aspect_compute_node.cores"}}
    memory = {{get $aspects "aspect_compute_node.memory"}}
    
    # From data model: boolean flags
    start = {{get $aspects "aspect_proxmox_guest.start"}}
    unprivileged = {{get $aspects "aspect_proxmox_guest.unprivileged"}}
    cmode = "{{get $aspects "aspect_proxmox_guest.cmode"}}"
    
    # From data model: rootfs (storage from compute_node, storage location from proxmox_guest)
    rootfs {
        storage = "{{get $aspects "aspect_proxmox_guest.rootfs_storage"}}"
        size = "{{get $aspects "aspect_compute_node.storage"}}"
    }
    
    # From data model: network
    network {
        name = "eth0"
        bridge = "{{get $aspects "aspect_network_interface.bridge"}}"
        ip = "{{get $aspects "aspect_network_interface.ip"}}/24"
        hwaddr = "{{get $aspects "aspect_network_interface.mac"}}"
        gw = "{{get $aspects "aspect_network_interface.gateway"}}"
    }
    
    # From data model: nameserver
    nameserver = "{{get $aspects "aspect_network_interface.nameserver"}}"
    
    # Still variable-based (sensitive data)
    ssh_public_keys = var.ssh_public_keys
}
{{/if}}
{{/if}}
{{/each}}
