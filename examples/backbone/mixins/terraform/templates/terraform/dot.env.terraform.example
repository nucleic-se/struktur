# Proxmox API Configuration
# Copy this file to .env.terraform and fill in your actual values

export TF_VAR_pm_api_url="https://polaris.hq.blippblopp.se:8006/api2/json"
export TF_VAR_pm_api_token_id="terraform@pam!terraform"
export TF_VAR_pm_api_token_secret="your-secret-here"
export TF_VAR_pm_tls_insecure=true

# SSH Keys for LXC containers
export TF_VAR_ssh_public_keys="$(cat ~/.ssh/id_rsa.pub)"
