{
  "$class": "universal_base",
  "$schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "$id": {
        "type": "string",
        "description": "Unique identifier for the instance"
      },
      "$class": {
        "type": "string",
        "description": "Class name for this instance"
      },
      "name": {
        "type": "string",
        "description": "Display name for the instance (defaults to id if not provided)"
      },
      "$render": {
        "type": "array",
        "description": "Build instructions for template rendering",
        "items": {
          "type": "object",
          "required": ["template", "output"],
          "properties": {
            "template": {
              "type": "string",
              "minLength": 1
            },
            "output": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        }
      },
      "$uses_aspects": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Aspect types present on this instance (auto-derived from aspects object keys)"
      },
      "domains": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Domain classifications for this instance"
      },
      "$aspects": {
        "type": "object",
        "additionalProperties": true,
        "description": "Aspect-specific data organized by aspect type"
      },
      "relations": {
        "type": "object",
        "additionalProperties": true,
        "description": "Relationships to other instances"
      },
      "pretty_name": {
        "type": "string",
        "description": "Optional display name for the class in viewers"
      },
      "description": {
        "type": "string",
        "description": "Human-readable description of the instance"
      },
      "stack_name": {
        "type": "string",
        "description": "Name of the stack this instance belongs to"
      },
      "$source_file": {
        "type": "string",
        "description": "Source file path (metadata added by loader)"
      },
      "$merged_from": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Source files merged into this instance (metadata added by merger)"
      }
    },
    "additionalProperties": false
  }
}
